<UserControl x:Class="SuperShell.Ui.OutputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperShell.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FF272626" Padding="5">
    <ScrollViewer x:Name="scroller">
        <TextBlock x:Name="txtConsole" Foreground="White" FontFamily="Consolas" TextWrapping="Wrap"/>
    </ScrollViewer>
</UserControl>
